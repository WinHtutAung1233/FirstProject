<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#000000"
    android:elevation="8dp"
    app:cardBackgroundColor="#D5A20C"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/post_news">

        <ImageView
            android:id="@+id/post_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/camera"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.cardview.widget.CardView
            android:id="@+id/profile_post"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10sp"
            app:cardCornerRadius="40dp"
            app:layout_constraintLeft_toLeftOf="@id/post_img"
            app:layout_constraintBottom_toBottomOf="@id/txt_location">
        <ImageView
            android:id="@+id/profile_post_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bag"
            android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_food_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Type:"
            android:layout_marginLeft="10sp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/post_img"
            app:layout_constraintLeft_toRightOf="@id/profile_post"/>
        <TextView
            android:id="@+id/food_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/txt_food_type"
            app:layout_constraintBottom_toBottomOf="@id/txt_food_type"
            android:text="Drink"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10sp"/>
        <TextView
            android:id="@+id/txt_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name:"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@id/food_type"
            app:layout_constraintLeft_toRightOf="@id/food_type"/>
        <TextView
            android:id="@+id/food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buger"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@id/food_type"
            app:layout_constraintLeft_toRightOf="@id/txt_food_name"/>
        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toBottomOf="@id/txt_food_type"
            app:layout_constraintLeft_toLeftOf="@id/txt_food_type"/>
        <TextView
            android:id="@+id/deli_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yangon"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/txt_location"
            app:layout_constraintLeft_toLeftOf="@id/food_type"/>
        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10sp"
            app:layout_constraintLeft_toLeftOf="@id/txt_food_type"
            app:layout_constraintTop_toBottomOf="@id/txt_location"/>
        <TextView
            android:id="@+id/food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/txt_price"
            app:layout_constraintLeft_toLeftOf="@id/food_type"/>
        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toBottomOf="@id/txt_price"
            app:layout_constraintLeft_toLeftOf="@id/txt_price"/>
        <TextView
            android:id="@+id/deli_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09692929641"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/txt_phone"
            app:layout_constraintLeft_toLeftOf="@id/food_type"/>

        <Button
            android:id="@+id/btn_call"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="ðŸ“²"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>